	<div class="footer-wrapper">
		<footer>
			<div class="bigpadding row">
				<div class="span12 full-border"></div>
				
				{% assign blog_module_in_footer = false %}
				
				<!-- Begin latest blog post -->
				{% unless settings.footer_blog_post == blank or blogs[settings.footer_blog_post].empty? or blogs[settings.footer_blog_post].articles.size == 0 %}
				{% assign article = blogs[settings.footer_blog_post].articles.first %}
				{% assign blog_module_in_footer = true %}
				<div class="span4">
					<div class="p5">
						<h4><a href="/blogs/{{ settings.footer_blog_post }}">{{ settings.footer_blog_post_header }}</a></h4>
						<p class="p10"><strong>{{ article.title | link_to: article.url }}</strong></p>
						<p>{{ article.content | strip_html | truncatewords: 30 }}</p>
					</div>
				</div>
			{% endunless %}
			<!-- End latest blog post -->
			
			<!-- Begin footer navigation -->
			<div class="span4 footer-menu">
				<h4>{{ settings.footer_linklist_title }}</h4>
				<ul class="unstyled">
					{% for link in linklists[settings.footer_linklist].links %}
						<li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
					{% endfor %}
				</ul>
			</div>
			<!-- End footer navigation -->
			
			<!-- Begin newsletter/social -->
			<div class="span4">
				
				{% if settings.footer_display_newsletter %}
					<div class="p5">
                      <h4>{{ settings.footer_newsletter_title }}</h4>
                      <style type="text/css">
                        #mc_embed_signup{clear:left; font:14px Helvetica,Arial,sans-serif; }
                        #mc_embed_signup input.button { background: {{ settings.newsletter_btn_color }}; display: inline-block; width: auto; border-radius: 2px;}
                        #mc_embed_signup input.email { float: left; border-radius: 2px;}
                      </style>
                      <div id="mc_embed_signup">
                          <form action="//loulaanddeer.us15.list-manage.com/subscribe/post?u=e8fd710d43f0b4800046d6813&amp;id=6dfaf55ebd" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                              <div id="mc_embed_signup_scroll">

                              <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
                              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                              <div style="position: absolute; left: -5000px;" aria-hidden="true">
                                <input type="text" name="b_e8fd710d43f0b4800046d6813_6dfaf55ebd" tabindex="-1" value="">
                                </div>
                              <div class="clear">
                                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                                </div>
                              </div>
                          </form>
                      </div>
					</div>
				{% endif %}
				
				{% if blog_module_in_footer %}
					<div class="clearfix">
						{% if settings.enable_social_links %}
							<h4>{{ settings.footer_social_title }}</h4>
							{% include 'social-links' %}
						{% endif %}
					</div>
				{% endif %}
				
			</div>
			<!-- End newsletter/social -->
			
			{% unless blog_module_in_footer %}
			<div class="span4">
				<div class="clearfix">
					{% if settings.enable_social_links %}
						<h4>{{ settings.footer_social_title }}</h4>
						{% include 'social-links' %}
					{% endif %}
				</div>
			</div>
		{% endunless %}
		
		<!-- Begin copyright -->
		<div class="tc copyright">
			{% if shop.enabled_payment_types.size > 0 %}
				<ul class="credit-cards clearfix">
					<p>Created in Brighton, UK</p>
					{% for type in shop.enabled_payment_types %}
						<li><img width="50" src="{{ type | payment_type_img_url }}" /></li>
					{% endfor %}
					<p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}</p>
					</ul> <!-- /.credit-cards -->
				{% endif %}
			</div>
			<!-- End copyright -->
		</div>
	</footer>
</div>