<div class="flyout" id="menuFlyout" style="padding-top: 1px;">
    <ul class="clearfix unstyled" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
        {% if shop.customer_accounts_enabled %}
        <li><span class="account-links">Account Links</span>
            <span class="more"><i class="fa fa-user"></i></span>
            <ul class="sub-menu unstyled">
                {% if customer %}
                <li class="customer-links"><a href="/account">Your Account</a></li>
                {% else %}
                <li class="customer-links">{{ 'Log in' | customer_login_link }}</li>
                {% if shop.customer_accounts_optional %}
                <li class="customer-links">{{ 'Create an account' | customer_register_link }}</li>
                {% endif %}
              {% endif %}
            </ul>
        </li>
        {% endif %} {% for link in linklists.main-menu.links %} {% if linklists[link.handle] == empty %}
        <li>
            <a href="{{ link.url }}" class="{% if link.active %} current{% endif %} navlink"><span>{{ link.title }}</span></a>
        </li>
        {% else %}
        <li>
            <a href="{{ link.url }}" class="{% if link.active %} current{% endif %} navlink"><span>{{ link.title }}</span></a>
            <span class="more">
              <ul class="unstyled" style="margin: 0;margin-top: 17px;margin-left: 7px;">
                <li class="hamburger" style="top: 0;transform: rotate(0deg);"></li>
                <li class="hamburger" style="top: 0;transform: rotate(90deg);"></li>
              </ul>
            </span>
            <ul class="sub-menu">
                {% for l in linklists[link.handle].links %}
                <li><a href="{{ l.url }}" class="{% if l.active %}current {% endif %}{% if forloop.last %} last {% endif %} navlink">{{ l.title }}</a>
                </li>
                {% endfor %}
            </ul>
        </li>
        {% endif %}
      {% endfor %}
      <li>
        {% assign socal_align_centre = true %}
        {% include 'social-links' %}
      </li>
    </ul>
</div>

<div class="flyout" id="searchFlyout" style="padding-top: 1px;">
    <ul class="clearfix" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
       <li class="search-field" style="padding: 0" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
            <form class="search" action="/search" style="border: none;">
                <button type="submit" alt="Go" class="go" style="font-size: 20px;margin-left: -45px;padding-left: 55px;">
                  <i class="fa fa-search" style="-webkit-text-stroke: 1px rgb(240, 240, 240);"></i>
                </button>
              <input type="text" name="q" class="search_box" placeholder="Product Search" value="{{ search.terms }}" style="border: none; font-size: 20px; box-shadow: none;"/>
              <!-- Don't ask how, but this makes sure only proucts are shown in search results. -->
              <input type="hidden" name="type" value="product" />
            </form>
        </li>
    </ul>
</div>
