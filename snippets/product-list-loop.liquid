 <div class="results list" id="search_product{{ forloop.index }}">
    {% if product.price_min < product.compare_at_price_min %}
      <div class="span2" style="outline: 3px solid red">
      <p style="margin: 0; position: absolute; z-index: 3;  background: red;  color: white;  padding: 5px;">SALE</p>
    {% else %}
      <div class="span2">
    {% endif %}
        {% if product.selected_or_first_available_variant.inventory_quantity < 10 and product.selected_or_first_available_variant.inventory_quantity > 0  and product.selected_or_first_available_variant.inventory_quantity != 1 %}
      <p style="margin: 0; position: absolute; z-index: 2;  background: #5858ff;  color: white;  padding: 5px; {% if product.price_min < product.compare_at_price_min %}  padding-left: 5rem; {% endif %}">ONLY {{ product.selected_or_first_available_variant.inventory_quantity }} LEFT!</p>
    {% endif %}
      <div class="thumbnail">
        <a class="search-link" alt="product" href="{{ product.url }}">
          <img src="{{ product.featured_image | product_img_url: '188x131', crop: 'center', format: 'pjpg' }}" alt="{{ product.title | escape  }}" />
        </a>
      </div>
    </div>
      <div class="search-result">
        <h3 class="product-title fl" productTitle="{{ product.title }}">{{ product.title | link_to: product.url }}</h3>
        <h3 class="product-vendor fr" productVendor="{{ product.vendor}}"> <a href="/collections/vendors?q={{product.vendor}}">{{ product.vendor }}</a></h3>
        <h4 class="product-price price"  productPrice="{{ product.price }}">
        {% if product.available %}
          {% if product.compare_at_price_max > product.price %}
            <del>{{ product.compare_at_price | money }}</del>
          {% endif %}
          {% if product.price_varies %}
              <small><em>from</em></small>
          {% endif %}
          {{ product.price | money }}
          {% else %}
            {{ product.price | money }} Sold Out
        {% endif %}
      </h4>

      {% assign hide_default_title = false %}
          {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
      {% assign hide_default_title = true %}
      {% endif %}

        <form  id="add-product-form" class="add-product-form" action="/cart/add" method="post">
          <div class="{% if product.metafields.product_customizer.size > 1  %} product-options {% endif %}">
          <div class="select choice"{% if hide_default_title %} style="display:none"{% endif %}>
            <select id="product-select" name="id" >
              {% for variant in product.variants %}
                <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
              {% endfor %}
            </select>
          </div>
          {% if product.metafields.product_customizer.size > 0 %}
            {% include 'product-customizer' %}
          {% endif %}
          </div>
          <div class="buttons" style="padding: 1rem 0; clear: right;">
          {% if product.available %}
            <input type="submit" class="search-add" name="add" value="Add to cart"/>
            <input type="number" class="search-qty" name="quantity" value="1"  min="1"/>
          {% else %}
            <input type="submit" class="search-add search-add-soldout" name="add" disabled="disabled" value="Sold out"/>
          {% endif %}
          </div>

           <a href="{{ product.url }}">More Details â†’</a>
        </form>
      <hr class="divider" />
  </div>  
  </div>