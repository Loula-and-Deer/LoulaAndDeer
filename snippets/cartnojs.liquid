<style>
  @media only screen and (max-width: 599px){
    .item a p{display: none;}
    .product_image a img{display: none;}
    .buttons input {width: 100%; margin: 5px 0;}
    .item {padding: 0;}
  }

  .cartJS{
    display: none;
  }
</style>

<div id="cart" style="background: white";>

  <!-- Begin empty cart -->
  {% if cart.item_count == 0 %}
  <div class="row" >
    <div class="expanded-message">
      <h2>Your cart is empty</h2>
    </div>
  </div>
  <!-- End empty cart -->

  <!-- Begin cart -->
  {% else %}
  <div class="row" style="background: white";>
    <div class="span12 cart-t">
      {% if customer %}
            <h1>Your cart, {{ customer.first_name }}</h1>
      	{% else %}
      	<h1>Your cart</h1>
      {% endif %}


      <form action="/cart" method="post" id="cartform" style="background: white";>

        <table>
          <thead>
            <tr>
              <th class="image">&nbsp;</th>
              <th class="item">&nbsp;</th>
              <th class="qty">
              </th>
              <th class="price">Price</th>
              <th class="remove">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            {% for item in cart.items %}
            <tr>
              <td class="image">
                <div class="product_image">
                  <a href="{{ item.url }}">
                    <img src="{{ item | img_url: 'small' }}"  alt="{{ item.title | escape }}" />
                  </a>
                </div>
              </td>
              <td class="item">
                <a href="{{ item.url }}">
                  <strong>{{ item.product.title }}</strong>

                   {% include 'product-customizer-helper' %}
                  {% if item.product.variants.size > 1 %}
                  <span class="variant_title">{{ item.variant.title }}</span>
                  {% endif %}
                </a>
              </td>
              {% if item.title contains "Personalised" %}
              <td class="qty">
                <input type="text" size="4" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" class="tc item-quantity" style="background: lightgrey"; readonly/>
              </td>
              {% else %}
              <td class="qty">
                <input type="text" size="4" name="updates[]" id="updates_{{ item.id }}" value="{{ item.quantity }}" onfocus="this.select();" class="tc item-quantity" />
              </td>
              {% endif %}
              <td class="price">{{ item.line_price | money }}</td>
              <td class="remove"><a href="/cart/change?line={{ forloop.index }}&quantity=0" class="cart">Remove</a></td>
            </tr>
            {% endfor %}
            <tr class="summary">
              <td class="image">&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td class="price"><span class="total">Total<br><strong>{{ cart.total_price | money }}</strong></span></td>
              <td>&nbsp;</td>
            </tr>
          </tbody>
        </table>

        <div class="buttons clearfix">
          <input type="submit" id="checkout" class="btn" name="checkout" value="Checkout" />
          <input type="submit" id="update-cart" class="btn" name="update" value="Update" />
        </div>

        {% if additional_checkout_buttons or settings.display_cart_note %}
        <div class="row" style="background: white";>
          {% if additional_checkout_buttons %}
          <div class="extra-checkout-buttons span6">
            {{ content_for_additional_checkout_buttons }}
          </div>
          {% endif %}
          {% if settings.display_cart_note %}
          <div class="span6">
            <div class="checkout-buttons clearfix">
              <label for="note">Add special instructions for your order:</label>
              <textarea id="note" name="note" rows="10" cols="40" maxlength="200" style="resize: none;">{{ cart.note }}</textarea>
            </div>
          </div>
          {% endif %}
        </div>
        {% endif %}
        {% endif %}

      </form>
    </div>

    {% if cart.item_count == 0 %}
    {% unless settings.featured_products == blank or collections[settings.featured_products].empty? %}
    <div >
      <h3 class="featured-cart-title">Featured Items</h3>
      {% for product in collections[settings.featured_products].products limit: 4 %}
	    {% include 'product-loop' %}
  	  {% endfor %}
    </div>
    {% endunless %}
    {% endif %}

  </div>
  <!-- End cart -->
</div>
