<style>
  h3{margin: 0;}
  hr.divider{
    background: #EFEFEF;
  }
</style>

<div id="search">
  {% if search.performed %}
  {% paginate search.results by settings.pagination_limit %}

  {% if search.results == empty%}

  <div class="row" style="background: white">
    <div class="expanded-message">
      <h2>No search results for <strong>"{{ search.terms }}"</strong>.</h2>
      <h3>Try searching for something else.</h3>
      <h4>Suggested Items</h4>
    </div>
    <div >
      {% for product in collections['new-in'].products limit: 6 %}
        {% include 'product-loop' %}
      {% endfor %}
    </div>
  {% else %}

  <div class="row">
    <div class="span12">
      <h1>Search Results</h1>
    </div>
  </div>

  <!-- Begin results -->
  {% for item in search.results %}
  <div class="row results">
    <div class="span1">
      <div class="thumbnail">
        <a alt="product" href="{{ item.url }}">{{ item.featured_image | product_img_url: 'medium' | img_tag }}</a>
      </div>
    </div>
    <div class="span11">
      <div class="search-result">
        <h3>{{ item.title | highlight: search.terms | link_to: item.url }}</h3>
        <h4>{{ item.price | money }}</h4>
        <p>{{ item.content | strip_html | truncatewords: 30 | highlight: search.terms }}</p>
      </div>

    </div>
  </div>
  <hr class="divider" />
  {% endfor %}
  <!-- End results -->

  {% include 'pagination' %}

  {% endif %}
  {% endpaginate %}
  {% endif %}
</div> <!-- /#search -->
