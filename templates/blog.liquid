{% paginate blog.articles by settings.pagination_limit %}
<div id="blog">
  
  <div class="row title bigpadding">
    <div class="span12">
      <h1>{{ blog.title }}</h1>
    </div> 
  </div> 
    
  <!-- Begin content -->
    <div class="articles">
      {% for article in blog.articles %}
      <div class="article row bigborder">
        <h1>
          <a href="{{ article.url }}">{{ article.title }}</a> 
          <span class="date" style="display: block;">
            {{ article.published_at | date: "%B %d %Y" }}
            {% if article.comments_enabled? and article.comments_count > 0 %}
            <small>
              <a href="{{ article.url }}#comments">{{ article.comments_count }} {{ article.comments_count | pluralize: "Comment", "Comments" }}</a>
            </small>
            {% endif %}
          </span>
        </h1>
        {{ article.excerpt_or_content }}
      </div>
      {% endfor %}
    </div>
    
    <!-- Begin sidebar -->
    {% include 'blog-sidebar' %}
    <!-- End sidebar -->
  
  <!-- End content -->
  
</div>

{% include 'pagination' %}
{% endpaginate %}

<style>#content{background: {{settings.shop_bg_color}}}</style>